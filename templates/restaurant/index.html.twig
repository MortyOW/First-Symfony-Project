{% extends 'base.html.twig' %}

{% block title %}Hello RestaurantController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ restaurant.name }}</h1>
    <ul>
        {% for productRestaurant in restaurant.productRestaurants %}
            <li>{{ productRestaurant.product.name }} || {{ productRestaurant.price }}</li>
            {% if productRestaurant.stock < 200 %}
                <h2 style="color: red">Stock Faible</h2>
            {% endif %}
        {% endfor %}
    </ul>
</div>
{% endblock %}
