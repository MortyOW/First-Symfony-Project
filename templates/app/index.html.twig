{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}

    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us" style="margin-top: 150px">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Why Us</h2>
                <p>We're open in these districts</p>
            </div>

            <div class="row">
            {% for district in districts %}
                {% include 'card/why-us-section.html.twig' with{
                    id: district.id,
                    name: district.name,
                    url: path('district_show', {'id': district.id}),
                }%}
            {% endfor %}
            </div>

        </div>
    </section><!-- End Why Us Section -->

{% endblock %}
