{% extends 'base.html.twig' %}

{% block title %}Hello DistrictController!{% endblock %}

{% block body %}

    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us" style="margin-top: 150px">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>{{ district.name }}</h2>
                <a href="{{ path('app_index') }}">All Districts</a>
            </div>

            <div class="row">
                {% for restaurant in district.restaurants %}
                    {% include 'card/why-us-section.html.twig'with {
                        id: restaurant.id,
                        name: restaurant.name,
                        url: path('restaurant_show', {'id': restaurant.id}),
                    } %}
                {% endfor %}
            </div>

        </div>
    </section><!-- End Why Us Section -->

{% endblock %}
